<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>List a space</title>
    <link rel="stylesheet" href="../../assets/stylesheets/users.css">
  </head>
  <body>

<%= render 'shared/menu' %>


<% provide(:title, "List a Space") %>

<div class="top1"></div>
<div class="top2"><h1 class="heading">List a space</h1> </div>
<div class="top3"></div>

  <div class="top1"></div>
  <div class="top2">

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @space, url: {action: "create"}, local: true do |f| %>

      <%= f.text_field :name, class: 'form-control', placeholder: 'name of place' %>
      <br />
      <%= f.text_area :description, class: 'form-control', placeholder: 'description' %>
      <br />
      <%= f.text_field :price, class: 'form-control', placeholder: 'Price per night (Â£)' %>
      <br />
      <%= f.label :Availability %>
      <br />
      <%= f.date_field :start_date, class: 'form-control', placeholder: 'Start date' %>
      <br />
      <%= f.date_field :end_date, class: 'form-control', placeholder: 'End date' %>
      <br />
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
</div>
<div class="top3"></div>
</body>
</html>
